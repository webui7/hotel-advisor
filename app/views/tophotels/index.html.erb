

<div class="row"><h1>Top 5 hotels</h1></div>
<% @tophotels.each do |tophotel| %>
<div class="row panel">
	<div class="small-12 large-12 columns">
		<div class="row">
			<div class="small-4 large-4 columns"><h2><%= tophotel.title %></h2></div>
	    </div>
	    <div class="row">
	    	<div class="small-6 large-4 columns">
	    	<%if tophotel.photo.blank?%>
	    		 No photo
	    	<%else%>
	    		<img src="<%=tophotel.photo%>" title="<%= tophotel.title %>" >
	    	<%end%>
	    	</div>
	    	<div class="small-6 large-8 columns" style="float:left">
	    		<div class="hotel-items">Stars:<%= tophotel.star.id %></div>
	    		<div class="hotel-items">Average Rate:<%= tophotel.averagerate %></div>
	    		<div class="hotel-items">Country:<%=tophotel.address.country%></div>
				<div class="hotel-items">Author:<%= tophotel.user.email %></div>
				<div>
					    <%= link_to 'Show', {:controller => "tophotels", :action => "show", :id => tophotel.id }, :class => "button" %>

				</div>
	       </div>
	    </div>
    </div>

</div>
<% end %>
</br>
</br>


